{% extends "Layouts/base.twig" %}

{% block title %}Admin Dashboard - PHOENIX EVENTBRITE{% endblock %}

{% block content %}
<div class="container flex-1">
    <h2 class="mb-4">Admin Dashboard</h2>
    
    <div class="row">    
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Statistiques Globales</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Total Utilisateurs</h5>
                                    <h2 class="mb-0">{{ dashboard.totalUsers }}</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Total Événements</h5>
                                    <h2 class="mb-0">{{ dashboard.totalEvents }}</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Événements en attente</h5>
                                    <h2 class="mb-0">{{ dashboard.pendingEvents }}</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}