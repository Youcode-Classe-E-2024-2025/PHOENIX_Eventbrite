<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}PHOENIX EVENTBRITE{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        /* Custom Styles for Dark Theme */
        .navbar {
            box-shadow: 0 2px 4px rgba(255,255,255,.1);
            background-color: #343a40 !important;
        }
        .navbar-brand {
            font-weight: 600;
            color: #ffffff !important;
        }
        .nav-link {
            font-weight: 500;
            color: #adb5bd !important;
        }
        .nav-link:hover {
            color: #ffffff !important;
        }
        .alert {
            border-radius: 8px;
            border: none;
            box-shadow: 0 2px 4px rgba(255,255,255,.05);
        }
        .alert-success {
            background-color: #155724;
            color: #d4edda;
        }
        .alert-danger {
            background-color: #721c24;
            color: #f8d7da;
        }
        .alert-warning {
            background-color: #856404;
            color: #fff3cd;
        }
        .alert-info {
            background-color: #0c5460;
            color: #d1ecf1;
        }
        .card {
            border: none;
            box-shadow: 0 2px 4px rgba(255,255,255,.05);
            border-radius: 8px;
            background-color: #2d3338;
        }
        .card-header {
            background-color: #343a40;
            border-bottom: 1px solid rgba(255,255,255,.05);
            padding: 1rem;
            color: #ffffff;
        }
        .btn {
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 6px;
        }
        .btn-sm {
            padding: 0.25rem 0.75rem;
        }
        body {
            background-color: #212529;
            color: #ffffff;
        }
        footer {
            background-color: #343a40 !important;
            color: #adb5bd !important;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100 m-auto">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-code-square me-2"></i>PHOENIX EVENTBRITE
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {% if is_authenticated and session.user_role == 'Participant' %}
                        <li class="nav-item">
                            <a class="nav-link" href="/events">
                                <i class="bi bi-speedometer2 me-1"></i>Events
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/reservations">
                                <i class="bi bi-speedometer2 me-1"></i>Reservations
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">
                                <i class="bi bi-person-circle me-1"></i>Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/logout">
                                <i class="bi bi-box-arrow-right me-1"></i>Logout
                            </a>
                        </li>
                    {% elseif is_authenticated and session.user_role == 'Organisateur' %}
                        <li class="nav-item">
                            <a class="nav-link" href="/events">
                                <i class="bi bi-speedometer2 me-1"></i>Events
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/reservations">
                                <i class="bi bi-speedometer2 me-1"></i>Reservations
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">
                                <i class="bi bi-person-circle me-1"></i>Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/logout">
                                <i class="bi bi-box-arrow-right me-1"></i>Logout
                            </a>
                        </li>
                    {% elseif is_authenticated and session.user_role == 'Admin' %}
                        <li class="nav-item">
                            <a class="nav-link" href="/Statistics">
                                <i class="bi bi-speedometer2 me-1"></i>Statistics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/events">
                                <i class="bi bi-speedometer2 me-1"></i>Events
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">
                                <i class="bi bi-person-circle me-1"></i>Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/logout">
                                <i class="bi bi-box-arrow-right me-1"></i>Logout
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">
                                <i class="bi bi-person-plus me-1"></i>Register
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mb-4 flex-1">
        {# Display alerts #}
        {% if error is defined and error %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                {{ error }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endif %}

        {% if success is defined and success %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                {{ success }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endif %}

        {% block content %}{% endblock %}
    </div>

    <footer class="bg-dark py-4 mt-auto">
        <div class="container text-center">
            <p class="mb-0">Â© {{ 'now'|date('Y') }} PHOENIX EVENTBRITE. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% block scripts %}{% endblock %}
</body>
</html>