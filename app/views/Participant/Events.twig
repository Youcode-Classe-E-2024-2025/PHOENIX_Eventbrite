{% extends 'layouts/base.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block content %}
<div class="container">
    <h2 class="mb-4">Liste des événements </h2>
    <div class="row">
        {% if events|length > 0 %}
            {% for event in events %}
            <div class="col-md-6 mb-4">
                <div class="card">
                    <img src="{{ event.image_url | default('https://placehold.co/200x100') }}" class="card-img-top" alt="{{ event.title }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ event.title }}</h5>
                        <p class="card-text">{{ event.description|slice(0, 100) }}...</p>
                        <p><strong>Date :</strong> {{ event.date|date('d/m/Y H:i') }}</p>
                        <p><strong>Lieu :</strong> {{ event.location }}</p>
                        <p><strong>Catégorie :</strong> {{ event.category_id }}</p>
                        <p><strong>Statut :</strong> {{ event.status }}</p>
                      <a href="/event_detail/{{ event.id }}" class="btn btn-primary btn-sm">Détails</a>

                    </div>
                </div>
            </div>
            {% endfor %}
        {% else %}
            <p class="text-muted">Aucun événement réservé.</p>
        {% endif %}
    </div>
