{% extends 'Layouts/base.twig' %}

{% block title %}Organizer Dashboard{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <!-- Statistics Section -->
    <div class="row mb-4">
        <!-- Total Events -->
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Events</h6>
                            <h2 class="my-2">{{ dashboard.totalEvents|default(0) }}</h2>
                        </div>
                        <div class="rounded-circle bg-white p-3">
                            <i class="fas fa-calendar fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tickets Sold -->
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Tickets Sold</h6>
                            <h2 class="my-2">{{ dashboard.ticketSold|default(0) }}</h2>
                        </div>
                        <div class="rounded-circle bg-white p-3">
                            <i class="fas fa-ticket-alt fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Revenue -->
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Revenue</h6>
                            <h2 class="my-2">$ {{ dashboard.totalRevenue|default(0) }}</h2>
                        </div>
                        <div class="rounded-circle bg-white p-3">
                            <i class="fas fa-dollar-sign fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Event Button -->
    <div class="mb-4">
        <a href="/events/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> Create Event
        </a>
    </div>

    <!-- Events Table -->
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Events List</h5>
                <div class="d-flex gap-2">
                    <select class="form-select form-select-sm" id="statusFilter">
                        <option value="">All Statuses</option>
                        <option value="active">Active</option>
                        <option value="completed">Completed</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                    <input type="text" class="form-control form-control-sm" placeholder="Search..." id="searchInput">
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Seats</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events|default([]) %}
                        <tr>
                            <td>{{ event.title }}</td>
                            <td>{{ event.date|date('m/d/Y h:i A') }}</td>
                            <td>{{ event.location }}</td>
                            <td>{{ event.tickets_sold|default(0) }}/{{ event.capacity }}</td>
                            <td>$ {{ event.price|number_format(2, '.', ',') }}</td>
                            <td>
                                <span class="badge bg-{{ event.status == 'active' ? 'success' : (event.status == 'completed' ? 'secondary' : 'danger') }}">
                                    {{ event.status|capitalize }}
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="/events/{{ event.id }}" class="btn btn-sm btn-info" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/events/{{ event.id }}/edit" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="deleteEvent({{ event.id }})" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if totalPages|default(1) > 1 %}
            <div class="d-flex justify-content-center mt-4">
                <nav>
                    <ul class="pagination">
                        <li class="page-item {{ currentPage == 1 ? 'disabled' : '' }}">
                            <a class="page-link" href="?page={{ currentPage-1 }}">&laquo;</a>
                        </li>
                        {% for i in 1..totalPages %}
                        <li class="page-item {{ currentPage == i ? 'active' : '' }}">
                            <a class="page-link" href="?page={{ i }}">{{ i }}</a>
                        </li>
                        {% endfor %}
                        <li class="page-item {{ currentPage == totalPages ? 'disabled' : '' }}">
                            <a class="page-link" href="?page={{ currentPage+1 }}">&raquo;</a>
                        </li>
                    </ul>
                </nav>
            </div>
            {% endif %}
        </div>
    </div>
</div>

{% block javascripts %}
<script>
// Search and filter function
function filterEvents() {
    const search = document.getElementById('searchInput').value.toLowerCase();
    const status = document.getElementById('statusFilter').value.toLowerCase();
    const rows = document.querySelectorAll('tbody tr');

    rows.forEach(row => {
        const title = row.cells[0].textContent.toLowerCase();
        const eventStatus = row.cells[5].textContent.trim().toLowerCase();
        const matchSearch = title.includes(search);
        const matchStatus = status === '' || eventStatus.includes(status);
        row.style.display = matchSearch && matchStatus ? '' : 'none';
    });
}

// Event listeners for search and filter
document.getElementById('searchInput').addEventListener('input', filterEvents);
document.getElementById('statusFilter').addEventListener('change', filterEvents);

// Delete function
function deleteEvent(id) {
    if (confirm('Are you sure you want to delete this event?')) {
        fetch(`/events/${id}/delete`, {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert(data.message || 'An error occurred while deleting the event');
            }
        });
    }
}
</script>
{% endblock %}
{% endblock %}
